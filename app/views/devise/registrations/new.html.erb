<html>
<head></head>
<body>
	<div class = "container">
		<div class = "form-signin">
		
		<h2>Sign up</h2>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

			<div><%= f.label :email %><br />
			<%= f.email_field :email, :autofocus => true, :placeholder=> "Enter email" %></div>

			<div><%= f.label :password %><br />
			<%= f.password_field :password, :placeholder=> "Enter password" %></div>

			<div><%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation, :placeholder=> "Enter password" %></div>

			<div><%= f.submit "Sign up" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
		</div>
	</div> <!-- /.container -->
</body>
</html>