<html>
<head></head>
<body>
	<div class = "container">
		<div class = "row" align = "center">
			<br />
			<div class="offset4 span4">
				<div class = "well">
					<h2>Sign up</h2>
					<%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
						<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
						<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
						<div><br />
						<%= f.email_field :email, :autofocus => true, :placeholder=> "Enter email" %></div>
						<div><br />
						<%= f.password_field :password, :placeholder=> "Enter password" %></div>
						<div><br />
						<%= f.password_field :password_confirmation, :placeholder=> "Re-Enter password" %></div>
						<div><%= f.submit "Sign up" %></div>
					<% end %>
					<%= render "devise/shared/links" %>
				</div><!-- /.well -->
			</div><!-- /.offset4 span4 -->
		</div>	<!-- /.row -->
	</div> <!-- /.container -->

</body>
</html>