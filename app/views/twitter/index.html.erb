<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h3>Welcome to Know Who !Followed</h3>
  
  <% if not  @unfollowers.blank? %> 
  		<h1>You have <%= @unfollowers.count %> Unfollowers Since Last Visit</h1>
  		<% i=0 %>
  		<% @unfollowers.each do |i| %>
  			<%= @prev_hash[i] %>
  		<% end %>
    <% else %>
      <h1>Congratulations !! No Unfollowers</h1>
	<% end %>
 
 <% if not  @new_followers.blank? %> 
      <h1>You have <%= @new_followers.count %> New followers Since Last Visit</h1>
      <% i=0 %>
      <% @new_followers.each do |i| %>
        <%= @new_hash[i] %>
      <% end %>
  <% end %>

</html>