<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <div class = "container">

        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <ul class="nav">
                <li>Know Who Unfollowed</li>
                <li><%= link_to "Home", controller: "welcome", action: "index" %></li>
                <li><%= link_to "Twitter", "/auth/twitter" %></li>
                <li class="active"><%= link_to "Facebook", "/auth/facebook" %></li>
                <li><%= link_to "Settings Panel", controller: "welcome", action: "edit" %></li>
                <li><%= link_to "About", controller: "welcome", action: "about" %></li>
                <li><%= link_to "Sign out", destroy_user_session_path %></li>
              </ul>
            </div>
          </div>
        </div><!-- /.navbar -->
      <% if not  @unfriended.blank? %> 
          <h1>You have Lost <%= @unfriended.count %> Friends Since Last Visit</h1>
          <% i=0 %>
          <table class="table table-striped">
            <% @unfriended.each do |i| %>
              <tr>
                <td><%= @prev_hash[i] %></td>
              </tr>
            <% end %>
          </table>
      <% else %>
            <h1>Congratulations !! No Unfollowers</h1>
      <% end %>
       
      <% if not  @new_friends.blank? %> 
            <h1>You have <%= @new_friends.count %> New Friends Since Last Visit</h1>
            <% i=0 %>
            <table class="table table-striped">
            <% @new_friends.each do |i| %>
              <tr>
                <td><%= @new_hash[i] %></td>
              </tr>
            <% end %>
          </table>
      <% end %>

    </div>  <!-- /.container -->
  </body>

</html>